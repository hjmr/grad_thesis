}

% 表紙用行間広め定義
\newenvironment{lineskiptitle}{%
        \baselineskip = 1.5cm
}

% 表紙の定義（日本語）
\def\jmaketitle{\par
        \begingroup
        \@jmaketitle
        \endgroup
}
\def\@jmaketitle{%
        \thispagestyle{empty}
        \begin{center}
                {\Large \@jhyear}
                \vspace{0.5cm}\par
                {\Large \@jclass}
                \vfill
                \begin{lineskiptitle}
                {\huge\bf \@jtitle}
                \end{lineskiptitle}
                \vfill
                {\Large \@juniv\ \@jfaculty}
                \vspace{0.5cm}\par
                {\LARGE \@jauthor}
                \vspace{2cm}\par
                {\Large 指導教員：\ \@jadvisor\ \@jposition}
                \vspace{1cm}\par
                {\Large 副指導教員：\ \@jsubadvisor\ \@jsubposition}
        \end{center}
        \newpage
        \pagenumbering{roman}
}

% 表紙の定義（英語）
\def\emaketitle{\par
        \begingroup
        \@emaketitle
        \endgroup
}
\def\@emaketitle{%
        \thispagestyle{empty}
        \begin{center}
                {\Large \@eyear}
                \vspace{0.5cm}\par
                {\Large \@eclass}
                \vfill
                \begin{lineskiptitle}
                {\Huge\sf \@etitle}
                \end{lineskiptitle}
                \vfill
                {\Large \@efaculty,\ \@euniv}
                \vspace{0.5cm}\par
                {\LARGE \@eauthor}
                \vspace{2cm}\par
                {\Large Advisor:\ \@eposition\ \@eadvisor}
                \vspace{1cm}\par
                {\Large Advisor:\ \@esubposition\ \@esubadvisor}
        \end{center}
        \newpage
        \pagenumbering{roman}
}

% アブストラクト用行間広め設定
\newenvironment{lineskipabst}{%
        \baselineskip = 1cm
}

% アブストラクトの定義（日本語）
\newenvironment{jabstract}{%
        \begin{center}
                {\Large\bf \@jclass 概要 \@jsyear 年度（\@jhyear）}
                \vspace{1cm}\par
                \begin{lineskipabst}
                {\LARGE\bf \@jtitle}\vspace{2cm}
                \end{lineskipabst}
        \end{center}
        \parindent=1zw
        \ifjapanese \else \renewcommand{\baselinestretch}{1.15}\selectfont \fi
}{
        \vfill
        {\bf キーワード：} \@jkeyword
        \newpage
        \ifjapanese \parindent=1zw \else \parindent=1.6zw \fi
        \renewcommand{\baselinestretch}{1.0}\selectfont
}

% アブストラクトの定義（英語）
\newenvironment{eabstract}{%
        \begin{center}
                {\Large\bf \@eclass\ Abstract}
                \vspace{1cm}\par
                \begin{lineskipabst}
                {\LARGE\sf \@etitle}\vspace{2cm}
                \end{lineskipabst}
        \end{center}
        \parindent=1.6zw
        \ifjapanese \renewcommand{\baselinestretch}{0.89}\selectfont \fi
}{
        \vfill
        {\sf Keywords:} \@ekeyword
        \newpage
        \ifjapanese \parindent=1zw \else \parindent=1.6zw \fi
        \renewcommand{\baselinestretch}{1.0}\selectfont
}

% 目次環境再定義
\renewcommand{\tableofcontents}{%
        \section*{\contentsname}
        \@starttoc{toc}
        \newpage
}

% 図目次環境再定義
\renewcommand{\listoffigures}{%
        \section*{\listfigurename}
        \@starttoc{lof}
        \newpage
}

% 表目次環境再定義
\renewcommand{\listoftables}{%
        \section*{\listtablename}
        \@starttoc{lot}
        \newpage
}

% 謝辞環境の作成
\newenvironment{acknowledgment}{%
        \addcontentsline{toc}{chapter}{\acknowledgmentname}
        \chapter*{\acknowledgmentname}
}{}

% 参考文献環境の作成
\newenvironment{bib}[1][100]{%
        \addcontentsline{toc}{chapter}{\bibname}
        \begin{thebibliography}{#1}
}{
        \end{thebibliography}
}

