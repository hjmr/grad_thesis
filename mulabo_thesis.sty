\newcommand{\bindermode}{%
        \setlength{\textwidth}{16cm}
        \setlength{\oddsidemargin}{10mm}
        \setlength{\evensidemargin}{10mm}
        \setlength{\topmargin}{-1cm}
        \setlength{\textheight}{24cm}
